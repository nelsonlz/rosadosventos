<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Área de Cliente - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-theme.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/style.css")" type="text/css" rel="stylesheet" />
    <style>
        body{
            padding-top: 80px;
            background: #d4d5d7;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Área do cliente</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li id="menuAcompanhamentoObra">
                        @Html.ActionLink("Meu Financeiro", "Index", "Financeiro")
                    </li>
                    <li id="menuAcompanhamentoObra">
                        @Html.ActionLink("Minhas Obras", "Index", "Obra")
                    </li>
                    <li id="menuAcompanhamentoObra">
                        @Html.ActionLink("Meus Laudos", "Index", "Laudos")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.9.1.intellisense.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.timelinr-0.9.54.js")"></script>
    <script>
        $(function () {
            $().timelinr({
                arrowKeys: 'true'
            })
        });
    </script>
    @RenderSection("script", required: false)
</body>
</html>
